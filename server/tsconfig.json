{
  "compilerOptions": {
    "incremental": true,
    "noUncheckedIndexedAccess": true,
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "skipLibCheck": true,
    "baseUrl": "./",
    "types": ["node", "jest"],
    "typeRoots": ["./node_modules/@types"],
    "paths": {
      "*": ["src/types/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
